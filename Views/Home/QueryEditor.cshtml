@{
    ViewData["Title"] = "Home Page";
}

@model web_ui.Models.QueryResultsModel;   
@using Microsoft.AspNetCore.Http;

@{    
        ViewData["Title"] = "Results";    
}    

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Astra Query Editor</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Query Editor
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12" style="margin-left: 20px;" >
                                @* <form role="form"> *@
                                <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="execute">
                                    <div class="form-group">
                                        <label>Enter your query:</label>
                                        @* <textarea asp-for="query" class="form-control" rows="10"></textarea> *@
                                        @* @Html.TextArea("query", null, new { @class = "form-control", rows=10 }) *@
                                        @Html.TextArea("query", null, new { @class="form-control", @style = "width: 90%;", rows=10 })
                                        
                                    </div>
                                    <button type="submit" class="btn btn-primary">Run query</button>
                                    <button type="reset" class="btn btn-primary">Clear</button>
                                </form>
                            </div>
                        </div>
                        <br>

                        <div class="row">
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-12" style="margin-left: 6px;">
                                <div class="panel-heading">
                                    <label>Results:</label>
                                </div>
                                <div class="panel-body">
                                    <div class="table table-responsive">
                                        @if (Model!=null) 
                                        {
                                            <table class="table table-striped table-bordered table-sm table-hover">
                                                <thead>    
                                                    <tr>    
                                                    @foreach (var column in Model.Columns) 
                                                    {
                                                        <th>    
                                                            @column   
                                                        </th>    
                                                    }
                                                    </tr>    
                                                </thead>    
                                                <tbody>    
                                                    @foreach (var row in Model.Rows)    
                                                    {
                                                        <tr> 
                                                            @for (int i = 0; i < row.Count; i++)
                                                            {
                                                                <td>    
                                                                    @row[i]
                                                                </td>    
                                                            }
                                                        </tr>    
                                                    }    
                                                </tbody>    
                                            </table>   
                                        }
                                        else 
                                        {
                                            <table class="table table-striped table-bordered table-sm table-hover">
                                                <thead>    
                                                    <tr>    
                                                    No results
                                                    </tr>    
                                                </thead>    
                                                <tbody>    
                                                    <tr> 
                                                        <td>    
                                                        </td>    
                                                    </tr>    
                                                </tbody>    
                                            </table>   
                                        }
                                    </div>
                                </div>
                            </div>
                            <!-- /.col-lg-6 (nested) -->
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

        
